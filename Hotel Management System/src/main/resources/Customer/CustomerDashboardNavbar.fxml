<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_RIGHT" prefHeight="650.0" minWidth="155.0" BorderPane.alignment="CENTER_RIGHT"
      xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.hms.NavbarController">

    <Button fx:id="home" alignment="CENTER" styleClass="menu-button" text="Home"
            onAction="#handleCustomerHome">
        <VBox.margin>
            <Insets bottom="10.0" top="10.0" right="5.0"/>
        </VBox.margin>
    </Button>
    <Button fx:id="roomDetails" styleClass="menu-button" text="Room Details"
            onAction="#handleRoomDetails">
        <VBox.margin>
            <Insets bottom="10.0" top="10.0" right="5.0"/>
        </VBox.margin>
    </Button>
    <Button fx:id="checkIn" styleClass="menu-button" text="Check In"
            onAction="#handleCustomerCheckIn">
        <VBox.margin>
            <Insets bottom="10.0" top="10.0" right="5.0"/>
        </VBox.margin>
    </Button>
    <Button fx:id="checkHistory" alignment="CENTER" styleClass="menu-button" text="Check History"
            onAction="#handleCustomerCheckHistory">
        <VBox.margin>
            <Insets bottom="10.0" top="10.0" right="5.0"/>
        </VBox.margin>
    </Button>

    <BorderPane.margin>
        <Insets bottom="10.0" top="10.0"/>
    </BorderPane.margin>
</VBox>



